# Application Configuration
APP_NAME="Vitality Clinic"
CLINIC_NAME="Vitality Health"
ADMIN_ROLE_NAME="Administrator"
PATIENT_ROLE_NAME="Patient"
THEME_COLOR="emerald"

# Deployment Configuration (Railway)
# Backend API URL (for frontend to connect to backend)
# Format: https://<backend-service>-<environment>.up.railway.app
REFLEX_API_URL=https://longevity-clinic-backend-test.up.railway.app

# Frontend URL (for CORS configuration)
# Per Reflex docs: REFLEX_DEPLOY_URL sets deploy_url
# Format: https://<frontend-service>-<environment>.up.railway.app
REFLEX_DEPLOY_URL=https://longevity-clinic-test.up.railway.app

# Database URL (set by Railway PostgreSQL service)
# REFLEX_DB_URL=postgresql://user:password@host:port/database

# Secrets (Add your keys here)
# OPENAI_API_KEY=sk-...
# CLERK_SECRET_KEY=sk_...

# Call Logs API Token
CALL_API_TOKEN=your_call_api_token_here

# Optional Configuration
# Demo mode - when true, uses static demo data instead of API calls (default: true)
IS_DEMO=true

